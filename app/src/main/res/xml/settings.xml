<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            app:key="account_category"
            app:title="Account">

        <Preference
                app:fragment="com.example.medtracker.AccountFragment"
                app:key="account"
                app:title="Manage your data"/>

    </PreferenceCategory>

    <PreferenceCategory
            app:key="appearance_category"
            app:title="Appearance">

        <SwitchPreferenceCompat
                app:key="theme"
                app:title="Choose dark or bright side"/>

    </PreferenceCategory>

    <PreferenceCategory
            app:key="notifications_category"
            app:title="Notifications">

        <SwitchPreferenceCompat
                app:key="notifications"
                app:title="Enable notifications"/>

    </PreferenceCategory>
    <PreferenceCategory
        app:key="logout"
        app:title="Logout">

        <Preference
            android:onClick="onLogoutClick"
            app:summary="Logout"

            app:key="logout"
            app:title="Logout" />

    </PreferenceCategory>

</PreferenceScreen>
